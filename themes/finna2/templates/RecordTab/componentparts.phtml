      'aria' => [
          'sortAscending' => ' - ' . $this->transEsc('label_sort_ascending'),
          'sortDescending' => ' - ' . $this->transEsc('label_sort_descending'),
      ]
  ]
);

$script = <<<JS
$(document).ready(function() {
  $('table#componentparts').dataTable({
    "pageLength": 50,
    "language": {$translations},
