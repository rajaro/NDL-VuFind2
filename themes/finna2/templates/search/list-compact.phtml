<?php if (!isset($this->indexStart)) {
  $this->indexStart = 0;
} ?>
<?php $showCheckboxes = !isset($this->hideCartControls) && $this->cart()->isActive() ?>
<div class="<?=$this->escapeHtmlAttr(trim('record-list ' . ($this->resultsClass ?? '')))?>">
  <?php $i = $this->indexStart;
  foreach ($this->results->getResults() as $current):
    $recordNumber = $this->results->getStartRecord() + $i - $this->indexStart; ?>
    <div id="result<?=$i++ ?>" class="result compact-list-view clearfix<?=$current->supportsAjaxStatus() ? ' ajaxItem' : ''?>">
      <?php if (isset($this->showCheckboxes) && $this->showCheckboxes): ?>
        <div class="record-checkbox">
          <?=$this->record($current)->getCheckbox('', 'search-cart-form')?>
        </div>
      <?php endif; ?>
      <span class="sr-only"><?=$this->transEsc('Search Result');?> <?=$recordNumber ?></span>
      <?=$this->record($current)->getSearchResult('compact', $this->results)?>
    </div>
  <?php endforeach; ?>
</div>
