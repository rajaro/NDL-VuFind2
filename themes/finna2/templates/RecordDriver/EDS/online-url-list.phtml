<?php foreach ($this->urls as $current): ?>
  <?php
    $url = $current['url'];
    $target = ' target="_blank"';
    if ('#' === $url[0]) {
      $url = $this->recordLink()->getUrl($this->driver) . $url;
      $target = '';
    } else {
      $url = $this->proxyUrl($url);
    }
  ?>
  <a href="<?=$this->escapeHtmlAttr($url)?>" class="fulltext<?=!empty($current['citation']) ? ' citation' : ''?>"<?=$target?> aria-label="<?=$this->transEscAttr('external_online_link')?>"><i class="fa fa-external-link"></i> <?=$this->transEsc($current['desc'])?></a>
<?php endforeach; ?>
